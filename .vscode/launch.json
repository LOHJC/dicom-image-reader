    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch (Windows)",
            "cwd": "${workspaceRoot}",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/Debug/dicom-image-reader.exe",
            "symbolSearchPath": "${workspaceRoot}/build/Debug;",
            // "console": "integratedTerminal",
            "console": "externalTerminal",
            "environment": [{ "name": "config", "value": "Debug" }],
